generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  githubId  String   @unique
  username  String
  avatarUrl String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  uploads   Upload[]
}

model Upload {
  id           Int      @id @default(autoincrement())

  uploaderId   Int?
  uploader     User?    @relation(fields: [uploaderId], references: [id])

  originalName String
  storageName  String   @unique
  mimeType     String
  size         Int      // für SQLite ok; später für sehr große Dateien -> BigInt
  hash         String   @unique

  createdAt    DateTime @default(now())
}
